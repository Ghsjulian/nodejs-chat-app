    <body>
<%- include("./layouts/header.ejs") %>
<main>
            <div class="ludo-container">
                <h3>Alexander<span>VS</span>Ghs Julian</h3>
                <div class="ludo">
                    <div class="player-pieces">
                        <div
                            class="player-piece"
                            player-id="P1"
