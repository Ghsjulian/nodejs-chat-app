                            class="player-piece"
                            player-id="P1"
                            piece="3"
                        ></div>

                        <div
                            class="player-piece"
                            player-id="P2"
                            piece="0"
                        ></div>
                        <div
                            class="player-piece"
                            player-id="P2"
                            piece="1"
                        ></div>
                        <div
                            class="player-piece"
                            player-id="P2"
                            piece="2"
                        ></div>
                        <div
                            class="player-piece"
                            player-id="P2"
                            piece="3"
                        ></div>
                    </div>

                    <div class="player-bases">
                        <div class="player-base" player-id="P1"></div>
                        <div class="player-base" player-id="P2"></div>
                    </div>
                </div>
                <div class="footer">
                    <div class="row">
                        <div class="dice-value"></div>
                        <button id="reset-btn" class="btn btn-reset">
                            Reset
                        </button>
                        <button id="dice-btn" class="btn btn-dice">Roll</button>
                    </div>
                    <h2 class="active-player">Active Player: <span></span></h2>
                </div>
            </div>
        </main>
        <script src="/js/main.js" type="module"></script>
        <script src="/socket.io/socket.io.js"></script>
